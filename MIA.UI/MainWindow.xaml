<Window x:Class="MIA.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monitor Interface Advanced - MIA" Height="450" Width="800">
    <DockPanel>
        <Menu x:Name="MenuPrincipal" DockPanel.Dock="Top">
            <MenuItem Header="Teste" x:Name="MenuTeste"/>
            <MenuItem Header="Módulos" x:Name="MenuModulos"/>
            <MenuItem Header="Temas"/>
            <MenuItem Header="Opções"/>
            <MenuItem Header="Ajuda">
                <MenuItem Header="Sobre" Click="Sobre_Click"/>
            </MenuItem>
        </Menu>

        <Label x:Name="StatusLabel"
               DockPanel.Dock="Bottom"
               Content="Inicializando..." 
               Padding="10"
               FontWeight="Bold"
               HorizontalAlignment="Center" 
               FontSize="14"
               Foreground="Gray"/>

        <Grid>
            <TextBlock Text="Interface Base Dinâmica Carregada"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="Gray"/>
        </Grid>
    </DockPanel>
</Window>
