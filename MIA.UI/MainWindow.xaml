<Window x:Class="MIA.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monitor Interface Advanced - MIA" Height="450" Width="800">
    <DockPanel>

        <!-- Menu principal -->
        <Menu x:Name="MenuPrincipal" DockPanel.Dock="Top">
          <MenuItem Header="Teste" x:Name="MenuTeste"/>
          <MenuItem Header="Módulos" x:Name="MenuModulos"/>
          <MenuItem Header="Temas"/>
          <MenuItem Header="Opções"/>
          <MenuItem Header="Ajuda">
            <MenuItem Header="Sobre" Click="Sobre_Click"/>
          </MenuItem>
        </Menu>


        <!-- Status inferior -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <Label x:Name="StatusLabel" Content="Iniciando..." />
            </StatusBarItem>
        </StatusBar>

        <!-- Conteúdo principal -->
        <Grid>
            <!-- Pode adicionar conteúdo principal aqui -->
        </Grid>

    </DockPanel>
</Window>
